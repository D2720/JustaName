<div class="header-top">
    <div class="logo">
        <%= link_to(root_url) do %>
            <img src="https://lapvip.vn/html-viettech/images/logo.png">
        <% end %>
    </div>
    <div class="header-search-field">
        <form>
            <input type="text" id="text-field" placeholder="Ban muon mua gi?">
            <input type="submit" id="search-button" value="Search">
         
        </form>
        
    </div>
    <div class="header-top-link">
        <ul>
            <li>
                <% if user_signed_in? %>
                    <%= link_to(destroy_user_session_path, method: :delete) do %> 
                        <i class="fas fa-user"></i><br><span>Log out</span>
                    <% end %>
                <% else %>
                    <%= link_to(new_user_session_path) do %> 
                        <i class="fas fa-user"></i><br><span>Login</span>
                    <% end %>
                <% end %>
            </li>
            <li><a href="#"><i class="fas fa-file-alt"></i><br><span>Tin tuc</span></a></li>
            <li><a href="#"><i class="fas fa-shopping-cart"></i><br><span>Gio hang</span></a></li>
            
        </ul>
    </div>   
</div>

<script type="text/javascript">
	window.addEventListener('scroll', function(){
        var userInfo = document.querySelector('.userInfo');
        userInfo.classList.toggle('sticky', window.scrollY > 76);
	});

    var options = {
    	url: function(phrase) {
      		return "/laptops.json?q[title_cont]=" + phrase;
    	},
		getValue: "title",
		template: {
			type: "links",
			fields: {
				link: "url"
			}
		},
  	};

  	$("#autocomplete input").easyAutocomplete(options);
</script>